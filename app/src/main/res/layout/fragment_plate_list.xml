<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEDED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <ImageButton
            android:id="@+id/MyPlate"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:accessibilityHeading="false"
            android:adjustViewBounds="false"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/chicken_option"
            android:scaleType="fitXY"
            android:src="@drawable/myplate"
            tools:ignore="MissingConstraints" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/FoodItemMyPlate"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_marginTop="15dp"
            android:accessibilityHeading="false"
            android:adjustViewBounds="false"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/chicken_option"
            android:scaleType="fitXY"
            android:src="@drawable/foodttemmyplate"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/FoodItemTwoMyPlate"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_marginTop="15dp"
            android:accessibilityHeading="false"
            android:adjustViewBounds="false"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/chicken_option"
            android:scaleType="fitXY"
            android:src="@drawable/fooditemtwomyplateoption"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_marginTop="15dp"
            android:accessibilityHeading="false"
            android:adjustViewBounds="false"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/chicken_option"
            android:scaleType="fitXY"
            android:src="@drawable/tip"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/paybutton"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginTop="15dp"
            android:accessibilityHeading="false"
            android:adjustViewBounds="false"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/chicken_option"
            android:scaleType="fitXY"
            android:src="@drawable/paybutton"
            tools:ignore="MissingConstraints" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
